<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFF"/>
            <stroke
                android:width="@dimen/half_dp"
                android:color="#11000000" />
            <corners android:radius="5dp"
                />
        </shape>
    </item>
    <item android:gravity="center_vertical|right" android:right="5dp">
        <layer-list>
            <item android:width="10dp" android:height="10dp"  android:gravity="center" android:bottom="0dp">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#D0D0D0" />
                        <stroke android:color="#D0D0D0" android:width="5dp"/>
                    </shape>
                </rotate>
            </item>
            <item android:width="40dp" android:height="10dp" android:bottom="8dp" android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="#FFF"/>
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>